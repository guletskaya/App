<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<div class="row justify-content-md-center">
<div style="width:auto; height:auto">
    <div class="container justify-content-md-center">
        <%= image_tag @user.avatar if @user.avatar.attached?%>
    </div>
    </div>
</div>

<div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_registration_path(@user), class: "btn btn-outline-info"  if @user==current_user || current_user.try(:admin?) %>
</div>

<h3 class="text-center mt-4">Questions</h3>

<%= render 'questions/question' %>